{
  "realm": "elibrary",
  "enabled": true,
  "displayName": "E-Library",
  "displayNameHtml": "<strong>E-Library</strong>",
  
  "registrationAllowed": true,
  "registrationEmailAsUsername": false,
  "rememberMe": true,
  "verifyEmail": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  
  "sslRequired": "external",
  "defaultSignatureAlgorithm": "RS256",
  
  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 300,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "offlineSessionMaxLifespanEnabled": false,
  
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "accessCodeLifespanLogin": 1800,
  "actionTokenGeneratedByAdminLifespan": 43200,
  "actionTokenGeneratedByUserLifespan": 300,
  
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Administrator role - full access",
        "composite": false
      },
      {
        "name": "librarian",
        "description": "Librarian role - can manage books",
        "composite": false
      },
      {
        "name": "customer",
        "description": "Customer role - can borrow/return books",
        "composite": false
      }
    ],
    "client": {
      "elibrary-api": [
        {
          "name": "books:read",
          "description": "Can read books"
        },
        {
          "name": "books:write",
          "description": "Can create/update books"
        },
        {
          "name": "borrow:manage",
          "description": "Can borrow/return books"
        }
      ]
    }
  },
  
  "groups": [
    {
      "name": "Administrators",
      "realmRoles": ["admin"]
    },
    {
      "name": "Librarians",
      "realmRoles": ["librarian"]
    },
    {
      "name": "Customers",
      "realmRoles": ["customer"]
    }
  ],
  
  "defaultRoles": ["customer"],
  
  "clients": [
    {
      "clientId": "elibrary-frontend",
      "name": "E-Library Frontend",
      "description": "React frontend application",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      
      "redirectUris": [
        "http://localhost:5173/*",
        "http://localhost:5002/*",
        "https://localhost:5173/*"
      ],
      "webOrigins": [
        "http://localhost:5173",
        "http://localhost:5002",
        "https://localhost:5173"
      ],
      
      "protocol": "openid-connect",
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "post.logout.redirect.uris": "http://localhost:5173/*"
      },
      
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access"
      ]
    },
    {
      "clientId": "elibrary-api",
      "name": "E-Library API",
      "description": "Backend API resource server",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      
      "protocol": "openid-connect",
      
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ]
    }
  ],
  
  "clientScopes": [
    {
      "name": "roles",
      "description": "OpenID Connect scope for adding user roles to the access token",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "false",
        "display.on.consent.screen": "true"
      },
      "protocolMappers": [
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "user.attribute": "foo",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String"
          }
        },
        {
          "name": "client roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-client-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "resource_access.${client_id}.roles",
            "jsonType.label": "String"
          }
        }
      ]
    }
  ],
  
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "email": "admin@elibrary.local",
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": true
        }
      ],
      "realmRoles": ["admin", "librarian", "customer"]
    },
    {
      "username": "librarian",
      "enabled": true,
      "email": "librarian@elibrary.local",
      "firstName": "Library",
      "lastName": "Staff",
      "credentials": [
        {
          "type": "password",
          "value": "librarian123",
          "temporary": true
        }
      ],
      "realmRoles": ["librarian", "customer"]
    },
    {
      "username": "customer",
      "enabled": true,
      "email": "customer@elibrary.local",
      "firstName": "Test",
      "lastName": "Customer",
      "credentials": [
        {
          "type": "password",
          "value": "customer123",
          "temporary": true
        }
      ],
      "realmRoles": ["customer"]
    }
  ],
  
  "browserSecurityHeaders": {
    "contentSecurityPolicyReportOnly": "",
    "xContentTypeOptions": "nosniff",
    "xRobotsTag": "none",
    "xFrameOptions": "SAMEORIGIN",
    "contentSecurityPolicy": "frame-src 'self'; frame-ancestors 'self'; object-src 'none';",
    "xXSSProtection": "1; mode=block",
    "strictTransportSecurity": "max-age=31536000; includeSubDomains"
  }
}
